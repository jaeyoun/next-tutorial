{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [360]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [false, {}]
  },
  "jsRules": {
    "max-line-length": {
      "options": [360]
    }
  }
}
